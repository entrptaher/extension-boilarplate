{
	"manifest_version": 2,
	"name": "Sample Extension",
	"version": "1.0",
	"short_name": "short",
	"description": "Sample Boilerplate",
	"icons": {
		"128": "img/logo.png"
	},
	"permissions": [
		"<all_urls>",
		"tabs",
		"notifications",
		"cookies",
		"activeTab",
		"storage"
	],
	"background": {
		"scripts": ["js/background.js"],
		"persistent": false
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"browser_action": {
		"default_icon": "img/logo.png"
	},
	"offline_enabled": true
}
